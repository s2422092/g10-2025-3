-- color_emotions_flat テーブルのサンプルカラー
-- このテーブルが必要なので仮に色を作成します
CREATE TABLE IF NOT EXISTS public.color_emotions_flat (
  id SERIAL PRIMARY KEY,
  color_name VARCHAR(50) NOT NULL
);

INSERT INTO public.color_emotions_flat (color_name) VALUES
