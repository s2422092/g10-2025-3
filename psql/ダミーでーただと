-- さらに複数日のデータを追加したい場合は、日付を指定して created_at を入れることも可能
-- 例:
INSERT INTO public.diaries (content, user_id, color_id, time_slot, created_at) VALUES
('朝から気分が良い', 1, 1, 'morning', '2025-12-01 08:00:00'),
('昼はランチで満足', 1, 5, 'afternoon', '2025-12-01 12:30:00'),
('夜に映画鑑賞', 1, 3, 'evening', '2025-12-01 20:00:00');
